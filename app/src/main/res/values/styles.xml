<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/darkestBlue</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/lightBlue</item>
    </style>

    <!--

        Login Activity

    -->

    <style name="loginActivity">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@color/lightBlue</item>
    </style>

    <style name="loginInput">
        <item name="android:layout_marginTop">2px</item>
    </style>

    <!--

        Material Design Forms

    -->

    <style name="MaterialList.Form" parent="MaterialList.Base">
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <style name="MaterialList.Form.Line" parent="MaterialList.Item.SingleLine">
        <item name="android:layout_marginTop">7dp</item>

    </style>

    <style name="MaterialList.Form.Icon" parent="MaterialList.Icon">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--

        Material Design Lists

    -->


    <style name="MaterialList">

    </style>

    <style name="MaterialList.Base">
    </style>


    <style name="MaterialList.Item" parent="MaterialList.Base">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="MaterialList.Item.Chat" parent="MaterialList.Item">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="MaterialList.Item.TwoLines" parent="MaterialList.Item">
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="MaterialList.Item.SingleLine" parent="MaterialList.Item">
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="MaterialList.Text" parent="MaterialList.Base">
        <item name="android:fontFamily">Roboto Regular</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="MaterialList.FirstLine" parent="MaterialList.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaterialList.SingleLine" parent="MaterialList.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaterialList.SecondLine" parent="MaterialList.Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialList.Icon" parent="MaterialList.Base">
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="MaterialList.Avatar" parent="MaterialList.Icon">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="MaterialList.Icon.Right" parent="MaterialList.Base">
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <!--

        Floating Action Button

    -->

    <style name="MaterialFAB">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/ic_person_add</item>
    </style>

    <!--

        Navigation View

    -->

    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:fontFamily">Roboto Medium</item>
    </style>

    <!--

        Imports

     -->


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--

        Chat

    -->

    <style name="chat_text_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="chat_timings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
